<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        >
        <shape>

            <stroke
                android:width="1dp"
                android:color="#263b06" />

            <gradient
                android:angle="90"
                android:endColor="#E91E63"
                android:centerColor="#C2185B"
                android:startColor="#E91E63"
                android:type="linear" />

            <corners android:radius="7dp" />

        </shape>
    </item>

    <item
        android:state_pressed="true"
        >
        <shape>

            <stroke
                android:width="3dp"
                android:color="@color/icons_and_text" />

            <gradient
                android:angle="90"
                android:endColor="#E91E63"
                android:centerColor="#C2185B"
                android:startColor="#E91E63"
                android:type="linear" />

            <corners android:radius="6dp" />

        </shape>
    </item>

</selector>